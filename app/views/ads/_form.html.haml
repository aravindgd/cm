= simple_form_for([current_user, @ad], class: "form-horizontal") do |f|
  = f.error_notification

  .form-inputs
    .form-group.col-md-12
      = f.input :name
    .form-group.col-md-12
      = f.input :content
    .form-group.col-md-12
      = f.file_field :image
      - if f.object.persisted? and f.object.image
        = image_tag @ad.image_url(:thumb) 
    .form-group.col-md-12
      = f.association :category, input_html: {class: "select2"}

  .form-actions
    = f.button :submit, class: "btn btn-success"
